
<p>
  <font size="+2">
    <%= link_to 'お題の新規作成', :action => 'new', :category_id => @category_id %>
  </font>

  <%= '&nbsp;' * 4 %>
  <span style="<%= @category_id ? '' : 'font-weight: bold' %>">
    <%= link_to_if @category_id, 'すべて', :action => 'list' %>
  </span>

  <% @categories.each do |category| -%>
    <%= '&nbsp;' * 1 %>
    <span style="<%= category.id != @category_id ? '' : 'font-weight: bold' %>">
      <%= link_to_unless category.id == @category_id,
                  category.name_zen, :action => 'list', :category_id => category.id %>
    </span>
  <% end -%>
</p>

<%= render :partial => 'list' %>

<%= render :partial => 'counts' %>

